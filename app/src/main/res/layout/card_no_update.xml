<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_main_no_update_available"
    style="?attr/cardStyle"
    card_view:cardCornerRadius="@dimen/card_view_radius"
    card_view:cardElevation="@dimen/shadow_height"
    card_view:cardUseCompatPadding="true" >

    <LinearLayout
        style="@style/MainListElement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="openCheckForUpdates"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/main_tv_update_available_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="?attr/updateAvailable" />

            <ProgressBar
                android:id="@+id/bar_main_progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tint="#ff4285f4" />

            <TextView
                android:id="@+id/main_tv_update_available_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="?attr/textColorSecondary" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/no_update"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_no_update_available"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="?attr/noUpdateAvailable" />

            <TextView
                android:id="@+id/main_tv_no_update_available_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="?attr/textColorSecondary" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
